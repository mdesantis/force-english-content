{
  "name": "force-english-content",
  "version": "1.0.0",
  "description": "[Mozilla Firefox extension] Forces localised web pages with poor or outdated translations to redirect to the original English content",
  "repository": "https://github.com/mdesantis/force-english-content",
  "author": "Maurizio De Santis <desantis.maurizio@gmail.com>",
  "license": "MPL-2.0",
  "private": true,
  "source": "src/background.ts",
  "targets": {
    "default": {
      "distDir": "dist",
      "outputFormat": "global"
    }
  },
  "browserslist": "Firefox ESR",
  "dependencies": {
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/mocha": "^9.0.0",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "mocha": "^9.1.3",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  },
  "scripts": {
    "build:parcel:dev": "parcel build --no-optimize",
    "build:parcel": "parcel build",
    "build:manifest": "mkdir -p dist && cp manifest.json dist",
    "build:icons": "./scripts/build-icons.sh",
    "build:web-ext": "web-ext build --overwrite-dest",
    "build": "npm run build:parcel && npm run build:icons && npm run build:manifest && npm run build:web-ext",
    "clean:dist": "rimraf dist",
    "clean": "npm run clean:dist",
    "watch:parcel": "parcel watch",
    "web-ext:dev": "web-ext run --verbose",
    "lint:eslint": "eslint .",
    "lint:web-ext": "web-ext lint",
    "lint:tsc": "tsc",
    "lint": "npm run lint:eslint && npm run lint:tsc && npm run lint:web-ext",
    "test": "mocha",
    "test:watch": "mocha --watch"
  },
  "webExt": {
    "sourceDir": "dist/"
  }
}
